{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "babel.config.js"],
  "exclude": ["node_modules"]
}
