{
  "ignore": [
    "*.js",
    ".husky",
    ".github/**",
    ".vscode",
    "*.json",
    "yarn.lock",
    "*.md",
    "*.yaml",
    "*.yml",
    ".editorconfig",
    ".eslintignore"
  ],
  "license": "license-template.md",
  "licenseFormats": {
    "ts": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "^Dockerfile": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}