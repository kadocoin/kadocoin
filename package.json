{
  "name": "kadocoin",
  "version": "1.0.0",
  "description": "Kadocoin is a decentralized censure-resistant peer-to-peer digital currency and asset",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src/ --exec ts-node src/server.ts",
    "test-watch": "jest --colors --watch",
    "test-watchAll": "jest --colors --watchAll",
    "average-work": "nodemon --watch src/ --exec ts-node src/util/average-work.ts",
    "tinker": "nodemon --watch src/ --exec ts-node src/tinker.ts",
    "supply": "nodemon --watch src/ --exec ts-node src/util/supply_reward/index.ts",
    "dev-peer": "cross-env GENERATE_PEER_PORT='true' nodemon --watch src/ --exec ts-node src/server.ts",
    "lint": "eslint --ext .ts --fix",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.txt dist/",
    "build": "yarn clean && tsc && yarn copy-files",
    "start": "node dist/server.js",
    "test": "jest --bail --findRelatedTests",
    "prepare-husky": "husky install",
    "format": "prettier --write",
    "license": "license-check-and-add add -f license.config.json"
  },
  "keywords": [
    "kadocoin",
    "crypto",
    "p2p",
    "kado village",
    "cryptography"
  ],
  "author": "Adamu Muhammad Dankore",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.26.2",
    "connect-mongo": "^4.4.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "elliptic": "^6.5.4",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "hex-to-bin": "^1.0.1",
    "ioredis": "^4.27.6",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "3.6.10",
    "multer": "^1.4.2",
    "nanoid": "^3.1.23",
    "nodemailer": "^6.6.3",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "request": "^2.88.2",
    "sanitize-html": "^2.4.0",
    "swagger-ui-express": "^4.1.6",
    "typescript": "^3.7.4",
    "uuid": "^8.3.2",
    "web3": "^1.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/elliptic": "^6.4.12",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.3",
    "@types/helmet": "^4.0.0",
    "@types/ioredis": "^4.26.6",
    "@types/jest": "^26.0.23",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongodb": "^3.6.17",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.7",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^15.12.5",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemon": "^1.19.0",
    "@types/passport": "^1.0.6",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.48.5",
    "@types/sanitize-html": "^2.3.1",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/typescript": "^2.0.0",
    "@types/uuid": "^8.3.0",
    "@types/web3": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "babel-jest": "^27.0.6",
    "copyfiles": "^2.4.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "license-check-and-add": "^4.0.2",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn format",
      "yarn lint",
      "yarn test"
    ]
  }
}
